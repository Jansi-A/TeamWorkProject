<apex:page standardController="Contact">
     <apex:form >
    <apex:pageBlock >
       
        <apex:pageBlockSection >
            
              Contact First Name <apex:inputField value="{! Contact.FirstName }" />
                Contact Last Name <apex:inputField value="{! Contact.LastName }" />
                Contact Email <apex:inputField value="{! Contact.Email }" />
            </apex:pageBlockSection>
                <apex:pageBlockButtons >
                    <apex:commandButton action="{! save }" value="Save" />  
                </apex:pageBlockButtons>
            
        
      
    </apex:pageBlock>
           </apex:form>
</apex:page>